{
    "name": "shieldci/analyzers-core",
    "description": "Shared foundation for building static analysis tools - includes abstract analyzer classes, result formatters, file parsers, and utilities",
    "keywords": [
        "shieldci",
        "static-analysis",
        "code-analysis",
        "security",
        "code-quality",
        "php-parser"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ShieldCI",
            "email": "support@shieldci.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "nikic/php-parser": "^4.15|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "ShieldCI\\AnalyzersCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ShieldCI\\AnalyzersCore\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage --coverage-text --coverage-clover=coverage.xml",
        "test-coverage-check": "vendor/bin/phpunit --coverage-text --coverage-clover=coverage.xml --coverage-filter src/ --fail-on-risky --fail-on-warning",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix",
        "format-check": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "check": [
            "@format-check",
            "@analyse",
            "@test"
        ],
        "quality": [
            "@format",
            "@analyse",
            "@test-coverage"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
